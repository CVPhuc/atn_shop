<div class="mt-6">
    <div class="row">

        {{#each products}}
        <div class="col-sm-6 col-lg-3">
            <div class="card card-product-item" style="margin-top: 15px;">

                <img class="card-img-top" src="./uploads/{{this.img}}" style="width: 100%; height: 500px" alt="Card image cap">


                <div class="card-body">

                    <h5 class="card-title" style="height: ;">{{this.name}}</h5>


                    <p class="card-text">{{this.des}}</p>
                     <p class="card-text">Price: {{this.price}}</p>
                    <a href="product/{{this._id}}/edit" class="btn btn-primary">Edit</a>
                    <a href="product/{{this._id}}/delete" class="btn btn-primary">Delete</a>
                    

                </div>

            </div>

        </div>

        {{/each}}

    </div>
</div>



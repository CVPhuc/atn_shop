<div class="mt-4">
    <h3>Create Product</h3>


    <form method="POST" action="/product/store" , enctype="multipart/form-data">
        <div class="form-group">
            <label for="name">Name Product</label>
            <input type="text" class="form-control" id="exampleInputEmail1" name="name">
        </div>
        <div class="form-group">
            <label for="des">Description Product</label>
            <input type="text" class="form-control" id="exampleInputEmail1" name="des">
        </div>

        <div class="form-group">
            <label for="exampleFormControlSelect1">Category</label>
            <select class="form-control" id="exampleFormControlSelect1" name="cate">
                {{#each category}}
                <option>{{this.name}}</option>
                {{/each}}
            </select>
        </div>

        <div class="form-group">
            <label for="des">Img</label>
            <input type="file" class="form-control-file" id="exampleInputEmail1" name="img">
        </div>

        <div class="form-group">
            <label for="des">Price Product</label>
            <input type="number" class="form-control" id="exampleInputEmail1" name="price">
        </div>


        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>


</div>